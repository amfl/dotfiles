"3.8.3 (created: 2014/11/09 13:19:01)

" To reload in windows
" :source ~/_vimperatorrc

" Some neat stuff sourced from
" https://github.com/mashiro/dot-files/blob/master/.vimperatorrc

set ignorecase
set incsearch
set smartcase

let mapleader = ","

" Make the follow hints more obvious
highlight Hint font-size:100%;color:white;background-color:#242;text-transform:uppercase;padding:2px;
set hintchars=hjklasdfguivbcn

" Make ctrl+a work to select all again
inoremap <C-a> <C-Home><C-S-End>

" Some lazy left-hand remaps to jump around tabs
nnoremap <C-q> gT
nnoremap <C-e> gt
nnoremap <C-f> <C-u>

" Standard j/k doesn't move enough
noremap k 10k
noremap j 10j
noremap h gT
noremap l gt
noremap H h
noremap L l
noremap v F

" BMarks {{{1
javascript <<EOM
function bmark(title, url, keyword) {
	if (!bookmarks.isBookmarked(url)) {
		bookmarks.add(false, title, url, keyword, ['keyword'], false);
	}
}
bmark('Search IRC'   , 'http://irc.netsplit.de/channels/?chat=%s',      'irc');
bmark('Google Images', 'https://www.google.com/search?q=%s&tbm=isch',    'gg');
bmark('Google'       , 'https://www.google.com/search?q=%s',              'g');
bmark('Youtube'      , 'https://www.youtube.com/results?search_query=%s', 'y');
bmark('DuckDuckGo'   , 'https://duckduckgo.com/%s',                       'd');
bmark('Promo Bay'    , 'https://thepiratebay.se/search/%s/0/0/0',         't');
bmark('Kickass'      , 'https://kickass.to/usearch/?q=%s',                'k');
EOM

