#!/bin/bash
# pw - Small password manager with json backend

PASSWORDFILE=~/.pw.json.gpg

# if [ -f ~/.pwrc ]
# then
#     . ~/.pwrc
# fi

if [ "$1" == "get" ]
then
    gpg2 --batch --quiet --decrypt ${PASSWORDFILE} | jq ".$2" --raw-output
elif [ "$1" == "set" ]
then
    echo "Not Implemented"
    # jq '.pass="newpass"'
elif [ "$1" == "del" ]
then
    echo "Not Implemented"
    # jq 'del (.pass)'
fi
